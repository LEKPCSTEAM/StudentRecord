<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:padding="16dp">

            <EditText android:id="@+id/etRegno" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="รหัสลงทะเบียน"/>
            <EditText android:id="@+id/etFullname" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="ชื่อ"/>
            <EditText android:id="@+id/etGender" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="เพศ"/>
            <EditText android:id="@+id/etProgram" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="สาขา"/>
            <EditText android:id="@+id/etCollege" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="คณะ"/>
            <EditText android:id="@+id/etDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="วันที่ลงทะเบียน e.g. 2022-03-20"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>